@using ImageUpload.Models
@model ImageViewModel

@if (!Model.HasPermission)
{
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            @if (!String.IsNullOrEmpty(Model.Message))
            {
                <h3 class="alert-danger">@Model.Message</h3>
            }
            <h4>Please enter the password for this image:</h4>
            <form method="post" action="/home/viewImage">
                <input type="hidden" name="id" value="@Model.Image.Id" />
                <input type="text" class="form-control" placeholder="Password" name="password" />
                <br />
                <button class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-9 col-md-offset-2 well">
            <img src="/UploadedImages/@Model.Image.FileName" style="width: 800px;" />
            <br />
            <h3>Views: @Model.Image.ViewCount</h3>
        </div>
    </div>
}



