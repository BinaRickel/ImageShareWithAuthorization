@using ImageUpload.Data
@model IEnumerable<Image>

<div class="container" style="margin-top:40px">
    <form method="post" action="/Home/Delete?id=">
        <table class="table table-bordered table-hover">
            <tr>
                <th style="text-align:center">Views:</th>
                <th style="text-align:center">Image:</th>
                <th style="text-align:center">Delete:</th>
            </tr>

            @foreach (Image i in Model)
            {
                <tr>
                    <td style="text-align:center; font-size:25px">@i.ViewCount</td>
                    <td><img src="~/UploadedImages/@i.FileName" style="width: 80px; margin-right:auto; margin-left:auto; display:block" /></td>
                    <td><button class="btn btn-danger" style="margin-left:auto; margin-right:auto; margin-top:20px; width:80px; display:block" name="id" value="@i.Id">Delete</button></td>
                </tr>
            }
        </table>
    </form>
</div>